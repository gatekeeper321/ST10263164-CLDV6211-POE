<style>
    .product-container {
        display: flex;
        flex-wrap: column;
        justify-content: space-between;
        gap: 20px;
    }

    .product-panel {
        width: 700px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        background-color: white;
        text-align: center;
        padding: 20px;
    }

    .heading-container {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        height: 15vh;
        background-color: transparent;
        flex-direction: column;
        margin-bottom: 0;
    }

    .heading-panel {
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 10px rgba(0,0,0,0.1);
        background-color: white;
        text-align: center;
        margin-bottom: 0;
    }

    form {
        margin-top: auto !important;
        text-align: center;
    }
</style>

<div class="heading-container">
    <div class="heading-panel">
        <h1>Order History</h1>
    </div>
</div>

<div class="product-container">
    @if (Model != null)
    {
            @foreach (var t in Model)
            {
                <div class="product-panel">
                <h2>@t.productName</h2>
                <p>@t.productDescription</p>
                <p>@t.productPrice.ToString("C")</p>
                </div>
            }
    }  
</div> 

